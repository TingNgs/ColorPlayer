<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="com.example.celestefyp.celestefyp.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/s_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/b_photo"
            android:layout_alignLeft="@+id/iv_color1"
            android:layout_alignStart="@+id/iv_color1"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"></Spinner>

        <Button
            android:id="@+id/b_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_image"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/iv_image"
            android:layout_marginTop="19dp"
            android:text="Take Photo"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="0dp" />


        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@+id/b_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="55dp" />


        <TextView
            android:id="@+id/tv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_image"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/iv_image"
            android:text="asdas"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/iv_color0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/iv_image"
            android:layout_alignStart="@+id/iv_image"
            android:layout_below="@+id/iv_image"
            android:layout_marginTop="25dp"
            android:background="@android:color/black"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="372dp" />

        <ImageView
            android:id="@+id/iv_color1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/iv_color2"
            android:layout_centerHorizontal="true"
            android:background="@android:color/black"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="372dp" />


        <ImageView
            android:id="@+id/iv_color2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/iv_image"
            android:layout_alignRight="@+id/iv_image"
            android:layout_alignTop="@+id/iv_color0"
            android:background="@android:color/black"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="372dp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
